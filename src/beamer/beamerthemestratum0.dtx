\newdimen\stratum@img@x%
\newdimen\stratum@img@y%
\newdimen\stratum@cmp@img%
\newdimen\stratum@cmp@want%
%
\newcount\stratum@ratio@tmp%
%
\newcount\stratum@ratio@img%
\newcount\stratum@ratio@want%
\newcommand{\stratum@calc@cmp}[3]{%
\settowidth\stratum@img@x{\includegraphics[width=100cm]{#1}}%
\settoheight\stratum@img@y{\includegraphics[width=1cm]{#1}}%
\stratum@ratio@img=\stratum@img@x%
\stratum@ratio@tmp=\stratum@img@y%
\divide\stratum@ratio@img by \stratum@ratio@tmp%
\stratum@cmp@img=\stratum@ratio@img pt%
%
\setlength\stratum@img@x{#2}%
\setlength\stratum@img@y{#3}%
\setlength\stratum@img@y{.01\stratum@img@y}%
\stratum@ratio@want=\stratum@img@x%
\stratum@ratio@tmp=\stratum@img@y%
\divide\stratum@ratio@want by \stratum@ratio@tmp%
\stratum@cmp@want=\stratum@ratio@want pt%
}%
%
\newcommand{\includeimagemaxdim}[3]{%
\stratum@calc@cmp{#1}{#2}{#3}
\ifdim \stratum@cmp@img < \stratum@cmp@want%
% limit height
\includegraphics[height=#3]{#1}%
\else
% limt width
\includegraphics[width=#2]{#1}%
\fi
}%
%
\newcommand{\includeimagemindim}[3]{%
\stratum@calc@cmp{#1}{#2}{#3}
\ifdim \stratum@cmp@img > \stratum@cmp@want%
% limit height
\includegraphics[height=#3]{#1}%
\else
% limt width
\includegraphics[width=#2]{#1}%
\fi
}
