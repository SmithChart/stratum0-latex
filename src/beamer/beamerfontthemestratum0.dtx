%    \end{macrocode}
%    \end{macro}
%
%    \begin{macro}{title}
% Fontface of titles on title frame
%    \begin{macrocode}
\setbeamerfont*{title}{series=\bfseries,size=\Large}
%    \end{macrocode}
%    \end{macro}
%
%    \begin{macro}{subtitle}
% Fontface of subtitles on title frame
%    \begin{macrocode}
\setbeamerfont*{subtitle}{series=\mdseries,size=\small}
%    \end{macrocode}
%    \end{macro}
%
%    \begin{macro}{block title}
% Fontface of block titles
%    \begin{macrocode}
\setbeamerfont*{block title}{series=\bfseries,size=\Large}
%    \end{macrocode}
%    \end{macro}
%
