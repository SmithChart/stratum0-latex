%
%    \subsection{Additional font sizes}
%
%    \begin{macro}{\microsize}
%    \begin{macrocode}
\newcommand\microsize{%
  \tiny%
  \@tempdima=\f@size pt%
  \@tempdima=0.8333333\@tempdima%
  \@tempdimb=1.2\@tempdima%
  \@setfontsize\microsize{\the\@tempdima}{\the\@tempdimb}%
}
%    \end{macrocode}
%    \end{macro}
%
%    \begin{macro}{\nanosize}
%    \begin{macrocode}
\newcommand\nanosize{%
  \microsize%
  \@tempdima=\f@size pt%
  \@tempdima=0.8333333\@tempdima%
  \@tempdimb=1.2\@tempdima%
  \@setfontsize\nanosize{\the\@tempdima}{\the\@tempdimb}%
}
%    \end{macrocode}
%    \end{macro}
%
%    \subsection{Beamerfont-definitions}
%
%    \begin{macro}{page number in sidebar}
